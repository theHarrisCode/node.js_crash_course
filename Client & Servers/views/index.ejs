<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body> 
    <!-- <% const name = 'mario' %> javascript dynamically using ejs--> 
    <!-- <p><%= name %></p> exporting variable-->

    <%- include('./partials/nav.ejs') %> <!--partials for the nav html code-->

    <div class="blogs content">
        <h2>All Blogs</h2>

        <% if (blogs.length > 0){ %>
            <% blogs.forEach(blog => { %>

            <h3 class="title"><%= blog.title %></h3>
            <p class="snippet"><%= blog.snippet %></p>

         <% }) %>
        <% } else { %>
            <p>There are no blogs to display.</p>
          <% } %>

    </div>

</body>
</html>